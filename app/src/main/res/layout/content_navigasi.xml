<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#B9F6CA"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.wiranatamade.explampung.NavigasiActivity"
    tools:showIn="@layout/app_bar_navigasi">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Lampung Fair 2017 PKOR"
            android:textAlignment="center"
            android:textColor="#1B5E20"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView2"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:onClick="ses"
            android:src="@drawable/fair" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PAHAWANG EVENT 2017"
            android:layout_marginTop="210dp"
            android:textColor="#1B5E20"
            android:textStyle="bold"
            android:textAlignment="center"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:src="@drawable/pahawang"
            android:layout_marginTop="230dp"
            />

          

    </RelativeLayout>
</ScrollView>

</RelativeLayout>
